@{
    ViewBag.Title = "Cliente";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />
<div class="table responsive">

    <h2 class="text-center">@View.Resources.Resource.Clientes</h2>
    <button data-toggle="modal" data-target="#modal-cliente"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovoCliente
    </button>

    <table id="cliente-tabela" class=" mr-0 ml-0 table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Telefone</th>
                <th>@View.Resources.Resource.CNPJ</th>
                <th>@View.Resources.Resource.CPF</th>
                <th>@View.Resources.Resource.CEP</th>
                <th>@View.Resources.Resource.Vendedor</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("ClienteModal.cshtml")
@section js{
    <script src="~/Scripts/Cliente/cliente.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/jquery.mask.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/jquery.mask.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/Mask.js"></script>
}
