@{
    ViewBag.Title = "Cliente";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />
<div>

    <h2 class="text-center">Clientes</h2>
    <button data-toggle="modal" data-target="#modal-cliente"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> Novo Cliente
    </button>

    <table id="cliente-tabela" class=" mr-0 ml-0 table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>CNPJ</th>
                <th>CPF</th>
                <th>CEP</th>
                <th>Vendedor</th>
                <th>Ação</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("ClienteModal.cshtml")
@section js{
    <script src="~/Scripts/Cliente/cliente.js">
    </script>
}


