<div class="modal" tabindex="-1" role="dialog" id="modal-cliente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="cliente-campo-nome">Nome</label>
                    <input id="cliente-campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-telefone">Telefone</label>
                    <input id="cliente-campo-telefone" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cnpj">CNPJ</label>
                    <input id="cliente-campo-cnpj" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cpf">CPF</label>
                    <input id="cliente-campo-cpf" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cep">CEP</label>
                    <input id="cliente-campo-cep" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-vendedor">Vendedor</label>
                    <select class="form-control"
                            id="cliente-campo-vendedor"
                            name="idVendedor"> </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success" id="cliente-botao-salvar">Salvar</button>
            </div>
        </div>
    </div>
</div>