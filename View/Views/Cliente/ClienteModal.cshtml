<div class="modal" tabindex="-1" role="dialog" id="modal-cliente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="cliente-campo-nome">Nome</label>
                    <input type="text" id="cliente-campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-telefone">Telefone</label>
                    <input type="text" id="cliente-campo-telefone" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cnpj">CNPJ</label>
                    <input type="text" id="cliente-campo-cnpj" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cpf">CPF</label>
                    <input type="text" id="cliente-campo-cpf" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cep">CEP</label>
                    <input type="text" id="cliente-campo-cep" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-vendedor">Vendedor</label>
                    <select id="cliente-campo-vendedor" class="form-control" name="campo-vendedor">
                    <option disabled="disabled" selected="selected">Selecione um vendedor</option>
                    @foreach(Model.Vendedor vendedor in ViewBag.Vendedores)
                    {
                        <option value="@vendedor.Id">@vendedor.Nome</option>
                    }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="fas fa-times"></i> Cancelar</button>
                <button id="cliente-botao-salvar"  type="button" class="btn btn-success"><i class="fas fa-save"></i>  Salvar</button>
            </div>
        </div>
    </div>
</div>