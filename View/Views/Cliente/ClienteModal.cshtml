<div id="modal-cliente" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="cliente-campo-nome">Nome</label>
                    <input type="text" id="cliente-campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-telefone">Telefone</label>
                    <input type="text" id="cliente-campo-telefone" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cnpj">CNPJ</label>
                    <input type="text" id="cliente-campo-cnpj" class="form-control" data-mask="000.000.000/0000-00" data-mask-selectonfocus="true" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cep">CEP</label>
                    <input type="text" id="cliente-campo-cep" class="form-control" data-mask="00000-000" data-mask-selectonfocus="true" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-vendedor"></label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
</div>
