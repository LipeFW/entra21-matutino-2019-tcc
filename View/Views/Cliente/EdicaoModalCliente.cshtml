<div class="modal bounceInDown animated" tabindex="-1" role="dialog" id="modal-cliente-editar">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@View.Resources.Resource.EditarCliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="cliente-campo-vendedor">@View.Resources.Resource.Vendedor</label>
                    <select class="form-control"
                            id="cliente-campo-vendedor">
                        <option disabled="disabled"
                                selected="selected">
                            @View.Resources.Resource.SelecioneumVendedor
                        </option>
                        @foreach (Model.Vendedor vendedor in ViewBag.Vendedores)
                        {
                            <option value="@vendedor.Id">@vendedor.Nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="cliente-campo-nome">@View.Resources.Resource.Nome <span class="text-danger">*</span></label>
                    <input type="text" id="cliente-campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-telefone">@View.Resources.Resource.Telefone </label>
                    <input type="text" id="cliente-campo-telefone" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cnpj">@View.Resources.Resource.CNPJ <span class="text-danger">*</span></label>
                    <input type="text" id="cliente-campo-cnpj" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="cliente-campo-cep">@View.Resources.Resource.CEP <span class="text-danger">*</span></label>
                    <input type="text" id="cliente-campo-cep" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="rubberBand animated btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> @View.Resources.Resource.Cancelar</button>
                <button id="cliente-botao-salvar" type="button" class="rubberBand animated btn btn-success"><i class="fa fa-check"></i>  @View.Resources.Resource.Salvar</button>
            </div>
        </div>
    </div>
</div>
