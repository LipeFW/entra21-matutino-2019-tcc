    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/Usuario/config.js" ~></script>
    <script src="~/Content/js/login.js"></script>
    <script src="~/Content/js/admin.js"></script>
    @RenderSection("js", false)

