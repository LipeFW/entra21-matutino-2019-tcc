<div class="modal" tabindex="-1" role="dialog" id="venda-produto-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@View.Resources.Resource.CadastrodeProduto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">@View.Resources.Resource.NovoProduto</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="modal-produto-nome">@View.Resources.Resource.Nome</label>
                    <input id="modal-produto-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="modal-produto-quantidade">@View.Resources.Resource.Quantidade</label>
                    <input type="number" id="modal-produto-quantidade" class="form-control" />
                </div>
                <div>
                    <label for="modal-produto-valor">@View.Resources.Resource.Valor</label>
                    <input id="modal-produto-valor" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">@View.Resources.Resource.Fechar</button>
                <button type="button" class="btn btn-success" id="modal-produto-salvar">@View.Resources.Resource.Salvar</button>
            </div>
        </div>
    </div>
</div>