
@{
    ViewBag.Title = "Cadastro";
}

<h2>@View.Resources.Resource.CadastroVenda</h2>

<form action="/venda/cadastro" method="post">

    <div class="form-group">
        <label for="venda-cliente">@View.Resources.Resource.Cliente</label>
        <select class="form-control" id="venda-cliente" name="idCliente"></select>
    </div>

    <div class="form-group">
        <label for="venda-vendedor">@View.Resources.Resource.Vendedor</label>
        <select class="form-control" id="venda-vendedor" name="idVendedor"></select>
    </div>

    <div class="form-group">
        <label for="venda-descricao">@View.Resources.Resource.Descricao</label>
        <textarea class="form-control" id="venda-descricao" name="descricao"></textarea>
    </div>

    <button type="submit" class="btn btn-success">@View.Resources.Resource.Salvar</button>

</form>

@section css{
    <link rel="stylesheet"
          href="~/Content/css/select2.css" />
}

@section js{
    <script src="~/Scripts/select2.js" }></script>
    <script src="~/Scripts/Venda/venda-cadastro.js"></script>
}

