@{
    ViewBag.Title = "Venda";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />

<div class="row">
    <div class="col-12">
        <h5 class="text-primary">@View.Resources.Resource.ListadeProdutos</h5>

        <button class="btn btn-primary float-right mb-2" data-toggle="modal" data-target="#venda-produto-modal">@View.Resources.Resource.NovoProduto</button>

        <table class="table table-striped table-bordered table-hover" id="venda-tabela">
            <thead>
                <tr>
                    <th>@View.Resources.Resource.Nome</th>
                    <th>@View.Resources.Resource.Quantidade</th>
                    <th>@View.Resources.Resource.Preco</th>
                    <th>@View.Resources.Resource.Acao.</th>
                </tr>
            </thead>

        </table>
    </div>
    <div class="col-12">
        <form action="/venda/editar" method="post">
            <input type="hidden" name="id" id="id" value="@ViewBag.Venda.Id" />
            <div class="form-group">
                <label for="venda-cliente">@View.Resources.Resource.Cliente</label>
                <select class="form-control"
                        id="venda-cliente"
                        name="idCliente">
                    <option selected="selected">@ViewBag.Venda.Cliente.Nome</option>
                </select>
            </div>
            <div class="form-group">
                <label for="venda-descricao">@View.Resources.Resource.Descricao</label>
                <textarea class="form-control"
                          id="venda-descricao"
                          name="descricao">@ViewBag.Venda.Descricao</textarea>
            </div>

            <button class="btn btn-primary float-right">@View.Resources.Resource.Salvar</button>

        </form>
    </div>
</div>
@RenderPage("ProdutoModal.cshtml")
@section js{
    <script src="~/Scripts/Venda/venda-editar.js"></script>
}