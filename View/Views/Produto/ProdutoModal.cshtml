<div class="modal" tabindex="-1" role="dialog" id="modal-produto">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="produto-campo-nome">Nome</label>
                    <input id="produto-campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="produto-campo-categoria">Categoria</label>
                    <input id="produto-campo-categoria" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="produto-campo-codigobarra">Código de Barra</label>
                    <input id="produto-campo-codigobarra" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="produto-campo-quantidade">Quantidade</label>
                    <input id="produto-campo-quantidade" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="produto-campo-valor">Valor</label>
                    <input id="produto-campo-valor" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success" id="produto-botao-salvar">Salvar</button>
            </div>
        </div>
    </div>
</div>