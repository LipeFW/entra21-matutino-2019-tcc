@{
    ViewBag.Title = "Produto";
}
<div class="table responsive">

    <h2 class="text-center">@View.Resources.Resource.Produtos</h2>
    <button data-toggle="modal" data-target="#modal-produto"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovoProduto
    </button>

    <table id="produto-tabela" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Categoria</th>
                <th>@View.Resources.Resource.QuantidadeProdutos</th>
                <th>@View.Resources.Resource.Valorunitario</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("ProdutoModal.cshtml")
@section js{
    <script src="~/Scripts/Produto/produto.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/Mask.js"></script>
}