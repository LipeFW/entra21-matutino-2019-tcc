@{
    ViewBag.Title = "Veículos";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />

<div class="table responsive">

    <h2 class="text-center">@View.Resources.Resource.Veiculos</h2>
    <button data-toggle="modal" data-target="#modal-veiculo"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovoVeiculo
    </button>

    <table class="table table-bordered table-hover table-striped" id="veiculo-tabela">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Marca</th>
                <th>@View.Resources.Resource.Modelo</th>
                <th>@View.Resources.Resource.AnoFabricacao</th>
                <th>@View.Resources.Resource.NumeroCaminhao</th>
                <th>@View.Resources.Resource.Placa</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("VeiculoModal.cshtml")
@section js{
    <script src="~/Scripts/Veiculo/veiculo.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/Mask.js"></script>
}