
@{
    ViewBag.Title = "Cadastro";
}

<body>
    <div class="form-group text-center">
        <div class="col-6">
            <form action="/veiculo/cadastro" method="post">
                <h2>Cadastro  de  Veiculos</h2>
                <div class="col-12">
                    <div class="form-group">
                        <label for="veiculo-marca">Marca</label>
                        <input class="form-control" nome="veiculo-marca" id="campo-veiculo-marca" type="text" required="required" style="width:300px" />
                    </div>
                    <div class="form-group">
                        <label for="veiculo-modelo">Modelo</label>
                        <input class="form-control" name="veiculo-modelo" id="campo-veiculo-modelo" type="text" class="mytextbox" required="required" style="width:300px">
                    </div>
                    <div class="form-group">
                        <label for="veiculo-anofabricacao">Ano de fabricação</label>
                        <input class="form-control" name="veiculo-anofabricacao" id="campo-veiculo-anofabricacao" type="number" min="1945" max="2025" class="mytextbox" required="required" style="width:300px">
                    </div>
                    <div class="form-group">
                        <label for="veiculo-numerocaminhao">Numero Do Caminhão</label>
                        <input class="form-control" name="veiculo-numerocaminhao" id="campo-veiculo-numerocaminhao" type="text" required="required" style="width:300px" />
                    </div>
                    <div class="form-group">
                        <label for="veiculo-placa">Placa</label>
                        <input class="form-control" name="veiculo-placa" id="campo-veiculo-placa" type="text" required="required" style="width:300px" />
                    </div>
                    <div class="col-12">
                        <button class="btn btn-success btn-block">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

