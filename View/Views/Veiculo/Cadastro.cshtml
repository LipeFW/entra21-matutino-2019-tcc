
@{
    ViewBag.Title = "Cadastro";
}

<body>


    <div class="form-group">
        <div class="col-6">

            <form action="/veiculo/cadastro" method="post">
                <div class="form-group">
                    <h2>Cadastro  de  Veiculos</h2>
                    <label for="veiculo-marca">Marca</label>
                    <input marca="veiculo-marca" id="campo-veiculo-marca"  type="text" required="required" style="width:300px" />
                    <label for="veiculo-modelo">Modelo</label>
                    <input modelo="veiculo-modelo" id="campo-veiculo-modelo"  type="text" class="mytextbox" required="required" style="width:300px">
                    <label for="veiculo-anofabricacao">Ano de fabricação</label>
                    <input anofabricacao="veiculo-anofabricacao" id="campo-veiculo-anofabricacao" placeholder="Ano de Fabricação" type="number" min="1945" max="2025" class="mytextbox" required="required" style="width:300px">
                    <label for="veiculo-numerocaminhao">Numero Do Caminhão</label>
                    <input numerocaminhao="veiculo-numerocaminhao" id="campo-veiculo-numerocaminhao" placeholder="Numero do Caminhão ex:3y1863" type="text" required="required" style="width:300px" />
                    <label for="veiculo-placa">Placa</label>
                    <input placa="veiculo-placa" id="campo-veiculo-placa" placeholder="Placa" type="text" required="required" style="width:300px" />
                    <div class="col-12">
                        <button class="btn btn-success mb-3 mt-3 float-right"><i class="fas fa-save"></i> Salvar</button>


                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

