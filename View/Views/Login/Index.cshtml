@{
    Layout = null;
    <link href="~/Content/login/css/login.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/theme/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/theme/global_assets/images/logo_icon_dark.png" rel="shortcut icon" />
    <title>Login - MCSS</title>
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id" content="609463938140-ae6rqro3soitqum50c9v8si142mvgd6l.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <link href="~/Content/theme/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/theme/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    @*<script src="~/Content/js/login.js"></script>*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Content/js/mostrarSenha.js"></script>
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />
<body class="background-img">
    <div id="login">
        <div class="login-tabela">
            <div id="form">
                <form action="/login/login" method="post">
                    <h2 class="titulo text-center">mcss</h2>
                    <div class="form-group">
                        <label>Usuário</label>
                        <input id="usuario" name="login" type="text" class="form-control" placeholder="User/Usuario" required="required" autofocus />
                    </div>
                    <div class="form-group">
                        <label>Senha</label>
                        <input id="password" name="senha" type="password" class="form-control" placeholder="Password/Contraseña" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="showPassword" /><label for="showPassword"> Mostrar senha </label>
                    </div>
                    <div class="form-group">
                        <button id="entrar" type="submit" class="btn btn-primary btn-block">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
@section css{
    <link rel="stylesheet" href="~/Views/Login/css/Login.css" />
}