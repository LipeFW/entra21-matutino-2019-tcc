
@{
    ViewBag.Title = "Inventário";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />

<div>

    <h2 class="text-center">Inventários</h2>
    <button data-toggle="modal" data-target="#modal-inventario"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> Novo Inventário
    </button>

    <table class="table table-bordered table-hover table-striped" id="inventario-tabela">
        <thead>
            <tr>
                <th>Código</th>
                <th>Número Caminhão</th>
                <th>Ação</th>
            </tr>
        </thead>
    </table>

</div>
@RenderPage("InventarioModal.cshtml")

@section js{
    <script src="~/Scripts/Inventario/inventario.js"></script>

    <script type="text/javascript" src="~/Scripts/Mascaras/Mask.js"></script>
}
