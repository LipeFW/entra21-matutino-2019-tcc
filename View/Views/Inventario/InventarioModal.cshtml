<div class="modal bounceInDown animated" tabindex="-1" role="dialog" id="modal-inventario">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@View.Resources.Resource.Inventario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <button data-toggle="modal" data-target="#modal-inserir-produto"
                        class="btn btn-primary float-right mb-2">
                    <i class="fas fa-plus"></i>  @View.Resources.Resource.AdicionarProdutos
                </button>
                <table class="table table-striped table-bordered table-hover" id="modal-inventario-tabela">
                    <thead>
                        <tr>
                            <th>@View.Resources.Resource.Nome</th>
                            <th>@View.Resources.Resource.Valor</th>
                            <th>@View.Resources.Resource.Acao</th>
                        </tr>
                    </thead>
                </table>


            </div>
            <div class="modal-footer">
                <button type="button" class="rubberBand animated btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> @View.Resources.Resource.Cancelar</button>
                <button id="inventario-botao-salvar" type="button" class="rubberBand animated btn btn-success"><i class="fa fa-check"></i>  @View.Resources.Resource.Salvar</button>
            </div>
        </div>
    </div>
</div>
@section js{

    <script src="~/Scripts/Mascaras/Mask.js"></script>
}


