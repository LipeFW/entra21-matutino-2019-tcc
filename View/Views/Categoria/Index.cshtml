@{
    ViewBag.Title = "Categoria";
}
<div class="table responsive">
    <h2 class="text-center">@View.Resources.Resource.Categorias</h2>
    <button data-toggle="modal" data-target="#modal-categoria"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovaCategoria
    </button>

    <table id="categoria-tabela" class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("CategoriaModal.cshtml")
@RenderPage("CategoriaModalEditar.cshtml")
@section js{
    <script src="~/Scripts/Categoria/categoria.js"></script>
    <script src="~/Scripts/Categoria/categoria-editar.js"></script>
}