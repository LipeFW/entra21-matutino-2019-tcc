@{
    ViewBag.Title = "Rota";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />
<div class="table responsive">

    <h2 class="text-center">@View.Resources.Resource.Rotas</h2>
    <button data-toggle="modal" data-target="#modal-rota"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovaRota
    </button>

    <table id="rota-tabela" class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Vendedor</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("RotaModal.cshtml")
@section js{
    <script src="~/Scripts/Rota/rota.js">
    </script>
    <script src="~/Scripts/select2.js">
    </script>
}
@section css{
    <link href="~/Content/css/select2.css"
          rel="stylesheet" />
}