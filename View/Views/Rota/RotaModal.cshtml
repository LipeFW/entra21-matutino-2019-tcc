<div class="modal" tabindex="-1" role="dialog" id="modal-rota">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Rotas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="rota-campo-nome">Nome</label>
                    <input id="rota-campo-nome" class="form-control" />
                </div>
            </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="rota-vendedor">Vendedor</label>
                        <select class="form-control"
                                name="rota-vendedor">
                            <option disabled="disabled"
                                    selected="selected">
                                Selecione um vendedor
                            </option>
                            @foreach (Model.Vendedor vendedor in ViewBag.Vendedores)
                            {
                                <option value="@vendedor.Id">@vendedor.Nome</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="fas fa-times"></i> Cancelar</button>
                    <button type="button" class="btn btn-success"><i class="fas fa-save"></i>  Salvar</button>
                </div>
        </div>
    </div>
</div>