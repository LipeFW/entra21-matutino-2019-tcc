<div class="modal bounceInDown animated" tabindex="-1" role="dialog" id="modal-rota">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@View.Resources.Resource.CadastrodeRotas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="rota-campo-nome">@View.Resources.Resource.Nome</label>
                    <input id="rota-campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="rota-campo-vendedor">@View.Resources.Resource.Vendedor</label>
                    <select class="form-control"
                            id="rota-campo-vendedor">
                        <option disabled="disabled"
                                selected="selected">
                            @View.Resources.Resource.SelecioneumVendedor
                        </option>
                        @foreach (Model.Vendedor vendedor in ViewBag.Vendedores)
                        {
                            <option value="@vendedor.Id">@vendedor.Nome</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="rubberBand animated btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> @View.Resources.Resource.Cancelar</button>
                <button type="button" class="rubberBand animated btn btn-success" id="rota-botao-salvar"><i class="fa fa-check"></i> @View.Resources.Resource.Salvar</button>
            </div>
        </div>
    </div>
</div>