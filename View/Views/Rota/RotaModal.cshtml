
@{
    ViewBag.Rota = "Cadastro de Rotas";
    <link href="~/Content/css/Rota.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <title>Rota - MCSS</title>
}

<body class="background-img" style="grid-column-end">


    <div class="modal fade" tabindex="-1" role="dialog" id="modal-rota">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cadastro Rota</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="rota-campo-nome">Nome</label>
                        <input type="text" id="rota-campo-nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="rota-campo-vendedor">Vendedor</label>
                        <select class="form-control" id="rota-campo-vendedor" name="idVendedor"></select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="rota-botao-salvar">Salvar</button>
                </div>
            </div>
        </div>
    </div>
