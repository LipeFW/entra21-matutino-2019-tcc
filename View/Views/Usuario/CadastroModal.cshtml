@{
    ViewBag.Title = "Cadastro de Usuarios ";
  
    <title>MCCS - Usuários</title>
}


<body>
    <div id="modal-usuario" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cadastro de Usuários</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="usuario-campo-nome">Nome</label>
                        <input type="text" id="usuario-campo-nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="usuario-campo-senha">Senha</label>
                        <input type="text" id="usuario-campo-seha" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success" id="usuario-botao-salvar">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
