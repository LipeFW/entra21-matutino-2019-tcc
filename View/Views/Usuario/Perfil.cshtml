@{
    ViewBag.Title = "Perfil";
}
<legend>
    <span class="h2">@View.Resources.Resource.Perfil</span>
</legend>
<div class="modal-body">
    <legend>
        <span class="h3">@View.Resources.Resource.DadosPessoais</span>
    </legend>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-nome">@View.Resources.Resource.Nome <span class="text-danger">*</span></label>
        <input id="perfil-campo-nome" class="form-control border-dark" />
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-telefone">@View.Resources.Resource.Telefone <span class="text-danger">*</span></label>
        <input id="perfil-campo-telefone" class="form-control border-dark" />
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-cpf">@View.Resources.Resource.CPF <span class="text-danger">*</span></label>
        <input id="perfil-campo-cpf" class="form-control border-dark" />
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-cnh">@View.Resources.Resource.CNH <span class="text-danger">*</span></label>
        <input id="perfil-campo-cnh" class="form-control border-dark" />
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-cep">@View.Resources.Resource.CEP <span class="text-danger">*</span></label>
        <input id="perfil-campo-cep" class="form-control border-dark" />
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-pais">@View.Resources.Resource.País <span class="text-danger">*</span></label>
        <select class="form-control border-dark" id="perfil-campo-pais">
            <option disabled="disabled" selected="selected"> @View.Resources.Resource.Selecioneumpaís</option>
        </select>
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-estado">@View.Resources.Resource.Estado <span class="text-danger">*</span></label>
        <select class="form-control border-dark" id="perfil-campo-estado">
            <option disabled="disabled" selected="selected"> @View.Resources.Resource.Selecioneumestado</option>
        </select>
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-cidade">@View.Resources.Resource.Cidade <span class="text-danger">*</span></label>
        <select class="form-control border-dark" id="perfil-campo-cidade">
            <option disabled="disabled" selected="selected"> @View.Resources.Resource.Selecioneumacidade</option>
        </select>
    </div>
    <div>
        <button class="btn btn-primary float-right"><i class="fas fa-pencil-alt"></i> @View.Resources.Resource.AlterarDados</button>
    </div>
</div>
<legend>
    <span class="h3">@View.Resources.Resource.AlterarSenha</span>
</legend>
<div class="modal-body">
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-senha">@View.Resources.Resource.Senha <span class="text-danger">*</span></label>
        <input id="perfil-campo-senha" class="form-control border-dark" />
    </div>
    <div class="form-group">
        <label style="font-weight:bold" for="perfil-campo-senha2">@View.Resources.Resource.ConfirmarSenha <span class="text-danger">*</span></label>
        <input id="perfil-campo-senha2" class="form-control border-dark" />
    </div>
    <div>
        <button class="btn btn-primary float-right"><i class="fas fa-pencil-alt"></i>@View.Resources.Resource.AlterarDados</button>
    </div>
</div>
<legend></legend>
@section js {
    <script src="~/Scripts/Usuario/perfil.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/Mask.js"></script>
}