<link href="~/Content/theme/global_assets/css/icons/fontawesome/styles.min.css" rel="stylesheet" type="text/css" />
<div class="modal bounceInDown animated" tabindex="-1" role="dialog" id="modal-modelo">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@View.Resources.Resource.CadastrodeModelo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="modelo-campo-marca">@View.Resources.Resource.Marca<span class="text-danger">*</span></label>
                    <select class="form-control"
                            id="modelo-campo-marca">
                        <option disabled="disabled"
                                selected="selected">
                            @View.Resources.Resource.SelecioneumModelo
                        </option>
                        @foreach (Model.Marca marca in ViewBag.Marcas)
                        {
                            <option value="@marca.Id">@marca.Nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="modelo-campo-nome">@View.Resources.Resource.Nome<span class="text-danger">*</span></label>
                    <input id="modelo-campo-nome" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="rubberBand animated btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> @View.Resources.Resource.Cancelar</button>
                <button id="modelo-botao-salvar" type="button" class="rubberBand animated btn btn-success"><i class="fa fa-check"></i>  @View.Resources.Resource.Salvar</button>
            </div>
        </div>
    </div>
</div>