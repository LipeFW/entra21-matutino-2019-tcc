
@{
    ViewBag.Title = "Modelos";
}

    <h3>Lista de Modelos</h3>

<div class="table responsive">

    <h2 class="text-center">@View.Resources.Resource.Modelos</h2>
    <button data-toggle="modal" data-target="#modal-modelo"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovoModelo
    </button>

    <table id="modelo-tabela" class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Marca</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>

@RenderPage("ModeloModal.cshtml")
@section js{
    <script src="~/Scripts/Modelo/modelo.js"></script>
}


