<div class="modal bounceInDown animated" tabindex="-1" role="dialog" id="modal-vendedor">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="far fa-address-card"></i> @View.Resources.Resource.Vendedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="vendedor-campo-nome">@View.Resources.Resource.Nome</label>
                    <input id="vendedor-campo-nome" class="form-control" />
                    <div class="form-group">
                        <label for="vendedor-campo-usuario">@View.Resources.Resource.Usuario</label>
                        <select class="form-control " id="vendedor-campo-usuario" name="campo-usuario">
                            <option disabled="disabled" selected="selected">@View.Resources.Resource.Selecioneumusuario</option>
                            @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                            {
                                <option value="@usuario.Id">@usuario.Nome</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="vendedor-campo-veiculo">@View.Resources.Resource.Veiculo</label>
                        <select class="form-control" id="vendedor-campo-veiculo" name="campo-veiculo">
                            <option disabled="disabled" selected="selected">@View.Resources.Resource.SelecioneumVeiculo</option>
                            @foreach (Model.Veiculo veiculo in ViewBag.Veiculos)
                            {
                                <option value="@veiculo.Id">@veiculo.Marca.Nome @veiculo.Modelo.Nome</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="rubberBand animated btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> @View.Resources.Resource.Cancelar</button>
                    <button type="button" class="rubberBand animated btn btn-success" id="vendedor-botao-salvar"><i class="fa fa-check"></i>  @View.Resources.Resource.Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>