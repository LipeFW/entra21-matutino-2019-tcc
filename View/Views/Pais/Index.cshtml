@{
    ViewBag.Title = "País";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />

<div class="table responsive">
    <h2 class="text-center">@View.Resources.Resource.Pais</h2>
    <button data-toggle="modal" data-target="#modal-pais"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovoPais
    </button>

    <table id="pais-tabela" class=" mr-0 ml-0 table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>
@RenderPage("PaisModal.cshtml")
@section js{
    <script src="~/Scripts/País/pais.js"></script>
    <script type="text/javascript" src="~/Scripts/Mascaras/Mask.js"></script>
}
