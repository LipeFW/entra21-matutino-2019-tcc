
@{
    ViewBag.Title = "Cidade";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/tabela/util.css" />
<div class="table responsive">
    <h2 class="text-center">@View.Resources.Resource.Cidade</h2>
    <button data-toggle="modal" data-target="#modal-cidade"
            class="btn btn-primary float-right mb-2">
        <i class="fas fa-plus"></i> @View.Resources.Resource.NovaCidade
    </button>

    <table id="cidade-tabela" class=" mr-0 ml-0 table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>@View.Resources.Resource.Codigo</th>
                <th>@View.Resources.Resource.Nome</th>
                <th>@View.Resources.Resource.Acao</th>
            </tr>
        </thead>
    </table>
</div>

